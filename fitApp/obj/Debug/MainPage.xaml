<Page
    x:Class="fitApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:fitApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:ConnectionId='1' x:Name="btnBMI" Content="Kalkulator BMI" HorizontalAlignment="Left" Margin="10,-0.167,0,-4.5" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" Width="180" Height="63" Foreground="#FF00FF4A" FontWeight="Bold" FontStyle="Italic"                      BorderThickness="1"/>
        <Button x:ConnectionId='2' x:Name="btnBMR" Content="Kalkulator BMR" HorizontalAlignment="Left" Margin="10,0.5,0,-5.167" VerticalAlignment="Top" Grid.Column="1" Grid.Row="2" Width="180" Height="63" Foreground="#FF00FF4A" FontWeight="Bold" FontStyle="Italic"                      BorderThickness="1"/>
        <Button x:ConnectionId='3' x:Name="btnEnc" Content="Encyklopedia" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Grid.Row="3" Width="180" Height="64" Grid.Column="1" Foreground="#FF00FF4A" FontWeight="Bold" FontStyle="Italic"                      BorderThickness="1"/>
        <TextBlock x:Name="textBlockAppName" HorizontalAlignment="Left" Margin="70,72,0,0" TextWrapping="Wrap" Text="FIT APP" VerticalAlignment="Top" Height="68" Width="259" FontSize="60" Foreground="#FF00FF4A" FontWeight="Bold" FontStyle="Italic" Grid.ColumnSpan="3" TextAlignment="Center"/>
        <Button x:ConnectionId='4' x:Name="btnExit" Content="Wyjdź" HorizontalAlignment="Left" Margin="181,0.333,0,0" Grid.Row="5" VerticalAlignment="Top" Width="90" Grid.Column="1" Grid.ColumnSpan="2" Foreground="#FF00FF4A" FontWeight="Bold" FontStyle="Italic"                       BorderThickness="1"/>
    </Grid>


</Page>

